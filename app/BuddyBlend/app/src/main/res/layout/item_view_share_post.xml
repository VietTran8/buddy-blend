<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="38dp"
            android:outlineAmbientShadowColor="@color/transparent"
            android:outlineSpotShadowColor="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/userAvatar"
                android:src="@drawable/brand"
                android:layout_width="38dp"
                android:layout_height="38dp"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginStart="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/userName"
                    android:textSize="14sp"
                    android:text="Phan Hoàn Việt"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/createdAt"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:text="1 giờ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:tint="@color/gray"
                    android:src="@drawable/baseline_brightness_1_24"
                    android:layout_width="3dp"
                    android:layout_height="3dp"/>
                <ImageView
                    android:id="@+id/privacy"
                    android:layout_width="13sp"
                    app:tint="@color/gray"
                    android:layout_height="13sp"
                    android:src="@drawable/baseline_public_24"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/transparent"
            android:id="@+id/btnAction"
            android:layout_width="16dp"
            android:layout_marginStart="10dp"
            app:tint="@color/gray"
            android:src="@drawable/baseline_more_horiz_24"
            android:layout_height="16dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/postContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:padding="10dp"
        android:clickable="true"
        android:background="@drawable/custom_ripple"
        android:ellipsize="end"
        android:textSize="12sp"
        android:text="ANESSA PHIÊN BẢN MỚI - BẢO VỆ TRƯỚC MỌI TÁC ĐỘNG
Với hơn 100 năm nghiên cứu về tia UV 23 năm giữ vững vị trí Chống nắng bán chạy số 1 tại Nhật, ANESSA tự hào ra mắt thành tựu mới nhất của thương hiệu:
🛡Công nghệ Auto Veil - lần đầu tiên tác động vào hiệu quả chống đứt gãy màng lọc UV theo từng chuyển động da. "/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="24dp"
                android:outlineAmbientShadowColor="@color/transparent"
                android:outlineSpotShadowColor="@color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/shareUserAvatar"
                    android:src="@drawable/test2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginStart="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/sharedUserName"
                        android:textSize="14sp"
                        android:text="Phan Hoàn Việt Việt"
                        android:textStyle="bold"
                        android:layout_marginBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/sharedCreatedAt"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:text="1 giờ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        app:tint="@color/gray"
                        android:src="@drawable/baseline_brightness_1_24"
                        android:layout_width="3dp"
                        android:layout_height="3dp"/>
                    <ImageView
                        android:id="@+id/sharedPrivacy"
                        android:layout_width="13sp"
                        app:tint="@color/gray"
                        android:layout_height="13sp"
                        android:src="@drawable/baseline_public_24"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/sharedPostContent"
            android:layout_width="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:padding="10dp"
            android:clickable="true"
            android:background="@drawable/custom_ripple"
            android:ellipsize="end"
            android:textSize="12sp"
            android:text="ANESSA PHIÊN BẢN MỚI - BẢO VỆ TRƯỚC MỌI TÁC ĐỘNG
Với hơn 100 năm nghiên cứu về tia UV 23 năm giữ vững vị trí Chống nắng bán chạy số 1 tại Nhật, ANESSA tự hào ra mắt thành tựu mới nhất của thương hiệu:
🛡Công nghệ Auto Veil - lần đầu tiên tác động vào hiệu quả chống đứt gãy màng lọc UV theo từng chuyển động da. "/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvPictures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:clickable="true"
        android:background="@drawable/custom_ripple"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/firstIcon"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/like_icon"/>
            <ImageView
                android:id="@+id/secondIcon"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="-5dp"
                android:src="@drawable/react_sad"/>
            <ImageView
                android:id="@+id/thirdIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_marginStart="-5dp"
                android:src="@drawable/react_haha"/>
            <TextView
                android:id="@+id/reactionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="3.929"
                android:layout_marginStart="3dp"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/commentCount"
                android:text="250 bình luận"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:tint="@color/gray"
                android:src="@drawable/baseline_brightness_1_24"
                android:layout_width="3dp"
                android:layout_height="3dp"/>
            <TextView
                android:id="@+id/shareCount"
                android:text="16 lượt chia sẻ"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/btnReact"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:background="@drawable/custom_ripple"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/reactIcon"
                android:layout_gravity="center_vertical"
                android:src="@drawable/not_like"
                android:layout_width="19dp"
                android:layout_height="19dp"/>
            <TextView
                android:id="@+id/reactTitle"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:layout_marginStart="6dp"
                android:text="Thích"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnComment"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:background="@drawable/custom_ripple"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/comment"
                android:layout_width="18dp"
                app:tint="@color/gray"
                android:layout_height="18dp"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:layout_marginStart="6dp"
                android:text="Bình luận"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnShare"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:background="@drawable/custom_ripple"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/share"
                app:tint="@color/gray"
                android:layout_width="18dp"
                android:layout_height="18dp"/>
            <TextView
                android:textSize="12sp"
                android:layout_marginStart="6dp"
                android:text="Chia sẻ"
                android:textColor="@color/gray"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>