<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/userAvatarWrapper"
            android:layout_width="wrap_content"
            app:cardCornerRadius="48dp"
            android:outlineSpotShadowColor="@color/transparent"
            android:outlineAmbientShadowColor="@color/transparent"
            android:layout_height="wrap_content">
            <ImageView
                android:translationZ="10dp"
                android:id="@+id/userAvatar"
                android:src="@drawable/test"
                android:scaleType="centerCrop"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/userAvatarWrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:id="@id/userFullName"
                android:text="Phan Hoan Viet"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/light_blue"
                android:outlineAmbientShadowColor="@color/transparent"
                android:outlineSpotShadowColor="@color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/btnPrivacy"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        app:tint="@color/blue"
                        android:src="@drawable/baseline_public_24"
                        android:id="@+id/privacyIcon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"/>
                    <TextView
                        android:layout_marginStart="5dp"
                        android:id="@+id/privacyText"
                        android:text="Công khai"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginEnd="5dp"
                        app:tint="@color/blue"
                        android:src="@drawable/baseline_arrow_drop_down_24"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

    <EditText
        android:id="@+id/edtContent"
        android:padding="10dp"
        android:hint="Bạn đang nghĩ gì..."
        android:textSize="14sp"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/btnShare"
            android:text="Chia sẻ ngay"
            android:insetTop="5dp"
            android:insetBottom="5dp"
            android:minHeight="0dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/custom_button_ripple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>