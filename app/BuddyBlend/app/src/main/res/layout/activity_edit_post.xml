<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.CreatePostActivity">

    <RelativeLayout
        android:id="@+id/header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:background="@color/transparent"
            app:srcCompat="@drawable/ic_arrow_back_24"
            app:tint="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỉnh sửa bài viết"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_post_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="6sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />
        </LinearLayout>
        <TextView
            android:id="@+id/btnPost"
            android:text="LƯU"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/text_highlight"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            app:layout_constraintTop_toBottomOf="@id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/avatarContainer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="50dp"
                android:outlineAmbientShadowColor="@color/transparent"
                android:outlineSpotShadowColor="@color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/userAvatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test"/>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/avatarContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="match_parent"
                    android:paddingEnd="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/userName"
                        android:text="Phan Hoàn Việt"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/privacy"
                        android:layout_marginTop="6dp"
                        app:cardCornerRadius="10dp"
                        android:outlineSpotShadowColor="@color/transparent"
                        android:outlineAmbientShadowColor="@color/transparent"
                        android:layout_width="wrap_content"
                        android:backgroundTint="@color/background_highlight"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:paddingStart="10dp"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/privacyIcon"
                                android:layout_marginEnd="3dp"
                                android:scaleType="centerInside"
                                android:layout_width="13dp"
                                app:tint="@color/text_highlight"
                                android:src="@drawable/baseline_public_24"
                                android:layout_height="13dp"/>
                            <TextView
                                android:id="@+id/privacyText"
                                android:text="Công khai"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="@color/text_highlight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:layout_marginEnd="3dp"
                                android:scaleType="centerInside"
                                android:layout_width="20dp"
                                app:tint="@color/text_highlight"
                                android:src="@drawable/baseline_arrow_drop_down_24"
                                android:layout_height="20dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <EditText
            android:id="@+id/edtContent"
            android:layout_weight="1"
            android:padding="10dp"
            android:hint="Bạn đang nghĩ gì?"
            android:gravity="top|left"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/actionWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btnUpload"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:src="@drawable/pictures"
                android:clickable="true"
                android:background="@drawable/custom_ripple"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/btnTag"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:src="@drawable/tag"
                android:clickable="true"
                android:background="@drawable/custom_ripple"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rcvMediaContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvMedia"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:background="@color/background">
                </androidx.recyclerview.widget.RecyclerView>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>